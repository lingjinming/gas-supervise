{
  "easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    // {
    //   "name:":"Welcome",
    //   "path":"pages/welcome/index",
    //   "style": {
    //     "navigationStyle": "custom",
    //     "enablePullDownRefresh": false
    //   }
    // },
    {
      "name": "Login",
      "path": "pages/login/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "name": "Home",
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": true
      }
    },
    {
      "name": "Notice",
      "path": "pages/notice/index",
      "style": {
        "navigationBarTitleText": "消息提醒",
        "enablePullDownRefresh": true
      }
    },
    {
      "name": "UserProfile",
      "path": "pages/user/index",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": true
      }
    }
  ],
  "subPackages":[
    // 事故事件管理
    {
      "root": "pages/accident",
      "pages": [
        {
          "name":"AccidentListPage",
          "path": "index",
          "style": {
            "navigationBarTitleText": "事故事件管理",
            "disableScroll": true
          }
        },
        {
          "name": "AccidentDetailPage",
          "path": "pages/AccidentDetailPage",
          "style": {
            "navigationBarTitleText": "事故事件详情",
            "disableScroll": true
          }
        },
        {
          "name": "AccidentEditPage",
          "path": "pages/AccidentEditPage",
          "style": {
            "navigationBarTitleText": "事故事件上报",
            "disableScroll": true
          }
        },
        {
          "name": "AccidentUploadPage",
          "path": "pages/AccidentUploadPage",
          "style": {
            "navigationBarTitleText": "上传报告",
            "disableScroll": true
          }
        }
      ]
    },
    // 第三方施工管理
    {
      "root": "pages/thirdBuild",
      "pages": [
        {
          "name": "ThirdBuildListPage",
          "path": "index",
          "style": {
            "navigationBarTitleText": "第三方施工管理",
            "disableScroll": true
          }
        },
        {
          "name": "ThirdBuildDetailPage",
          "path": "pages/thirdBuildDetailPage",
          "style": {
            "navigationBarTitleText": "第三方施工详情",
            "disableScroll": true
          }
        },
        {
          "name": "ThirdBuildFormPage",
          "path": "pages/thirdBuildFormPage",
          "style": {
            "navigationBarTitleText": "第三方施工上报",
            "disableScroll": true
          }
        },
        {
          "name": "ThirdBuildReportFormPage",
          "path": "pages/thirdBuildReportFormPage",
          "style": {
            "navigationBarTitleText": "交底上报",
            "disableScroll": true
          }
        },
        {
          "name": "ThirdBuildGuardFormPage",
          "path": "pages/thirdBuildGuardFormPage",
          "style": {
            "navigationBarTitleText": "上报看护记录",
            "disableScroll": true
          }
        }
      ]
    },
    // 检查计划管理
    {
      "root": "pages/check",
      "pages": [
        {
          "name": "CheckPlanListPage",
          "path": "index",
          "style": {
            "navigationBarTitleText": "检查计划管理",
            "enablePullDownRefresh": true
          }
        },
        {
          "name": "CheckPlanDetailPage",
          "path": "pages/CheckPlanDetailPage",
          "style": {
            "navigationBarTitleText": "企业合规性检查"
          }
        },
        {
          "name": "CheckPlanCreatePage",
          "path": "pages/CheckPlanCreatePage",
          "style": {
            "navigationBarTitleText": "创建检查计划"
          }
        },
        {
          "name": "CheckPlanEditPage",
          "path": "pages/HandleOrderCreatePage",
          "style": {
            "navigationBarTitleText": "创建整改单",
            "componentPlaceholder": {
              "hidden-page-item": "view"
            }
          }
        },
        {
          "name": "Signature",
          "path": "pages/signature",
          "style": {
            "navigationBarTitleText": "签名",
            "disableScroll": true,
            "pageOrientation": "landscape"
          }
        }
      ]
    },
    // 隐患管理
    {
      "root": "pages/hidden",
      "pages": [
        {
          "name": "HiddenListPage",
          "path": "index",
          "style": {
            "navigationBarTitleText": "隐患管理",
            "disableScroll": true
          }
        },
        {
          "name": "HiddenDetailPage",
          "path": "pages/HiddenDetailPage",
          "style": {
            "navigationBarTitleText": "隐患详情"
          }
        },
        {
          "name": "HiddenReformPage",
          "path": "pages/HiddenReformPage",
          "style": {
            "navigationBarTitleText": "隐患跟进"
          }
        },
        {
          "name": "HiddenReportPage",
          "path": "pages/HiddenReportPage",
          "style": {
            "navigationBarTitleText": "隐患上报"
          }
        }
      ]
    },
    // 安全检查
    {
      "root": "pages/safeCheck",
      "pages": [
        {
          "name": "SafeCheckPage",
          "path": "index",
          "style": {
            "navigationBarTitleText": "安全检查",
            "disableScroll": true
          }
        },
        {
          "name": "SafeCheckDetailPage",
          "path": "pages/DetailPage",
          "style": {
            "navigationBarTitleText": "检查详情"
          }
        },
        {
          "name": "SafeCheckHidangerDetailPage",
          "path": "pages/HidangerDetailPage",
          "style": {
            "navigationBarTitleText": "隐患详情"
          }
        },
        {
          "name": "SafeCheckCreatePage",
          "path": "pages/CreatePage",
          "style": {
            "navigationBarTitleText": "新增检查"
          }
        },
        {
          "name": "SafeCheckSelectTargetPage",
          "path": "pages/SelectTargetPage",
          "style": {
            "navigationBarTitleText": "新增检查"
          }
        },
        {
          "name": "SafeCheckSelectTopicPage",
          "path": "pages/SelectTopicPage",
          "style": {
            "navigationBarTitleText": "新增检查"
          }
        },
        {
          "name": "SafeCheckCreateTargetPage",
          "path": "pages/CreateTargetPage",
          "style": {
            "navigationBarTitleText": "新建检查对象"
          }
        }
      ]
    }
  ],
  "preloadRule": {
    "pages/check/index": {
      "network": "all",
      "packages": [
        "pages/hidden"
      ]
    },
    // 安全检查详情时,预加载隐患分包
    "pages/safeCheck/pages/DetailPage": {
      "network": "all",
      "packages": [
        "pages/hidden"
      ]
    }
  },
  "tabBar": {
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "/static/img/index.png",
        "selectedIconPath": "/static/img/index_act.png"
      },
      {
        "pagePath": "pages/user/index",
        "text": "我的",
        "iconPath": "/static/img/user.png",
        "selectedIconPath": "/static/img/user_act.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8",
    "usingComponents": {
      "van-button": "wxcomponents/vant/button/index",
      "van-cell-group": "wxcomponents/vant/cell-group/index",
      "van-field": "wxcomponents/vant/field/index",
      "van-picker": "wxcomponents/vant/picker/index",
      "van-picker-column": "wxcomponents/vant/picker-column/index",
      "van-cell": "wxcomponents/vant/cell/index",
      "van-swipe-cell": "wxcomponents/vant/swipe-cell/index",
      "van-radio": "wxcomponents/vant/radio/index",
      "van-radio-group": "wxcomponents/vant/radio-group/index",
      "van-uploader": "wxcomponents/vant/uploader/index",
      "van-datetime-picker": "wxcomponents/vant/datetime-picker/index",
      "van-popup": "wxcomponents/vant/popup/index",
      "van-cascader": "wxcomponents/vant/cascader/index",
      "van-notify": "wxcomponents/vant/notify/index",
      "van-icon": "wxcomponents/vant/icon/index",
      "van-empty": "wxcomponents/vant/empty/index",
      "van-toast": "wxcomponents/vant/toast/index",
      "van-switch": "wxcomponents/vant/switch/index",
      "van-skeleton": "wxcomponents/vant/skeleton/index",
      "van-tag": "wxcomponents/vant/tag/index",
      "van-checkbox-group": "wxcomponents/vant/checkbox-group/index",
      "van-checkbox": "wxcomponents/vant/checkbox/index",
      "van-calendar": "wxcomponents/vant/calendar/index",
      "van-tabs": "wxcomponents/vant/tabs/index",
      "van-tab": "wxcomponents/vant/tab/index",
      "van-sticky": "wxcomponents/vant/sticky/index",
      "van-action-sheet": "wxcomponents/vant/action-sheet/index",
      "van-search": "wxcomponents/vant/search/index",
      "van-loading": "wxcomponents/vant/loading/index"
    }
  }
}
